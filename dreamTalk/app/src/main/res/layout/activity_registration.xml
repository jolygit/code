<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jolillc.wetalk.registration">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/fname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:id="@+id/fnameEditText" />

    <TextView
        android:text="Last Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname"
        android:layout_alignStart="@+id/fname"
        android:layout_marginTop="25dp"
        android:id="@+id/lname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignStart="@+id/fnameEditText"
        android:id="@+id/lnameEditText" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RUserName"
        android:layout_alignStart="@+id/RUserName"
        android:layout_marginTop="24dp"
        android:id="@+id/Rpassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBottom="@+id/Rpassword"
        android:layout_alignStart="@+id/unameEditText"
        android:id="@+id/rpasswordEdit" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rpassword"
        android:layout_alignStart="@+id/Rpassword"
        android:layout_marginTop="23dp"
        android:id="@+id/Remail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/remailEditText"
        android:layout_alignBottom="@+id/Remail"
        android:layout_alignStart="@+id/rpasswordEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/unameEditText"
        android:layout_below="@+id/lnameEditText"
        android:layout_alignStart="@+id/lnameEditText" />

    <Button
        android:text="Back to Login"
        android:onClick="backtologinlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlogin"
        android:layout_alignBaseline="@+id/rregisterButton"
        android:layout_alignBottom="@+id/rregisterButton"
        android:layout_alignStart="@+id/Remail" />

    <TextView
        android:text="User Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RUserName"
        android:layout_alignBottom="@+id/unameEditText"
        android:layout_alignStart="@+id/lname" />

    <Button
        android:onClick="register"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rregisterButton"
        android:layout_below="@+id/remailEditText"
        android:layout_alignEnd="@+id/remailEditText" />

    <TextView
        android:text="First Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fname"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/fnameEditText"
        android:layout_marginEnd="23dp" />

</RelativeLayout>
