<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.sample.dreamtalk.com.jolytech.sample.dreamtalk.MainActivity"
    android:weightSum="1">


    <Button
        android:text="@string/chat"
        android:onClick="goToChat"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:id="@+id/chat"
        tools:layout_conversion_absoluteX="257dp"
        tools:layout_conversion_absoluteY="468dp"
        tools:layout_conversion_absoluteWidth="126dp"
        tools:layout_conversion_absoluteHeight="59dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:onClick="goToVoiceChat"
        android:text="Call"
        android:background="@drawable/acceptrectange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voiceCall"
        app:layout_constraintBottom_toBottomOf="@+id/chat"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0dp"
        android:layout_width="0dp"
        android:id="@+id/customListView"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="66dp"
        android:layout_height="0dp"></ListView>


</android.support.constraint.ConstraintLayout>
