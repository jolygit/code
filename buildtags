#!/bin/bash
find /home/aj/code -name "*.cpp"  -print|etags -o /home/aj/TAGS -;
find /home/aj/code -name "*.[ch]"  -print|etags -ao /home/aj/TAGS -;
find /usr/include/ -name "*.[ch]" -print|etags -ao /home/aj/TAGS -;
find /home/aj/code -name "*.pl" -print|etags -ao /home/aj/TAGS -;
find /home/aj/code -name "*.pm" -print|etags -ao /home/aj/TAGS -;
